import 'dotenv/config';
import express from 'express';
import OpenAI from 'openai';

const app = express();
app.use(express.json());

// Inicializar OpenAI con tu API Key
const openai = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY
});

// Ruta para verificar que el servidor estÃ¡ vivo
app.get('/', (req, res) => {
  res.send('Chatbot de Limitless estÃ¡ activo ðŸ”¥');
});

// Ruta webhook donde WhatsApp / Tidio enviarÃ¡n mensajes
app.post('/webhook', async (req, res) => {
  try {
    const message = req.body.message || "Hola";

    const completion = await openai.chat.completions.create({
      model: "gpt-4o-mini",
      temperature: 0.3,
      messages: [
        {
          role: "system",
          content: `Eres un asistente profesional para Limitless Design Studio.
Responde breve, amable, con claridad, en el idioma del usuario.`
        },
        { role: "user", content: message }
      ]
    });

    const reply = completion.choices[0].message.content;
    res.json({ reply });

  } catch (error) {
    console.error(error);
    res.json({ reply: "Hubo un error procesando tu mensaje." });
  }
});

// Puerto asignado por Render
const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log("Servidor funcionando en el puerto " + PORT);
});
